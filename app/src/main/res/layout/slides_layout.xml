<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/slider_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/slide_frame1" />

    <TextView
        android:id="@+id/slider_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_display_light"
        android:gravity="center"
        android:text="@string/first_slide_title"
        android:textSize="18sp"
        android:textColor="@color/thi_main_color" />

    <TextView
        android:id="@+id/slider_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_thin"
        android:textAlignment="center"
        android:padding="8dp"
        android:text="@string/first_slide_desc"
        android:textSize="14sp"
        android:textColor="@color/thi_main_color"/>

</LinearLayout>